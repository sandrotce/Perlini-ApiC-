{
  "DefaultConnectionString": "Sqlite",
  "ConnectionStrings": {
    "Sqlite": "Data Source=Totvs.Sample.Shop.db"
  },  
  "server.urls": "http://localhost:8080",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Tnf": "Information",
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Security"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "ColoredConsole",
              "Args": {
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u4}] [{HttpContextId}] {SourceContext} {Message}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/log.txt",
                "rollingInterval": "Day",
                "buffered": true,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u4}] [{HttpContextId}] {SourceContext} {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  }
}